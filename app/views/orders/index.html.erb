<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Total</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= order.total %></td>
        <td><%= order.state %></td>
        <td><%= order.user_name %></td>
        <% if order.state == "Pending" %>
          <td><%= link_to 'Pay', order_payments_path(order.id) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>  
          <td><%= link_to 'Show', order %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

