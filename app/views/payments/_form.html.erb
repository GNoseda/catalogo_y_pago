<%= form_with(model: [@order, payment], local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @tbk_alert %>
    <div class="field">
      <%= form.label :transbank_method, "Transbank Method" %>
      <%= form.select :transbank_method, ["Credit Card", "Webpay", "Oneclick"] %>
    </div>
  <% end %>


  <div class="field">
    <%= form.hidden_field :payment_method_id, value: @payment_method.id %>
  </div>

  <div class="field">
    <%= form.label :account_number, "Account Number" %>
    <%= form.text_field :account_number %>
  </div>
  

  <div class="field">
    <%= form.label :password, "Password" %>
    <%= form.password_field :password %>
  </div>


  <div class="actions">
    <%= form.submit 'Pay' %>
  </div>
<% end %>
